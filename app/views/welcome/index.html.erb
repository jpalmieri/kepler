<div class='cover animated'>
  <div id="socialmedia1">
    <%= link_to image_tag("facebook-icon.png"), "https://www.facebook.com/kepler452b.org", target: '_blank' %>
  </div>
  <div id="socialmedia2">
    <%= link_to image_tag("instagram-icon.png"), "https://www.instagram.com/kp452b/", target: '_blank' %>
  </div>
  <div id="splash">
    <%= image_tag("kepler452b.png") %>
  </div>
  <div id="location">
    <%= link_to "https://www.google.de/maps/place/52%C2%B028'45.0%22N+13%C2%B025'55.0%22E/@52.4791892,13.4310504,19z/data=!4m5!3m4!1s0x0:0x0!8m2!3d52.479159!4d13.431957", target: "_blank" do %>
      <%= image_tag "gps_date.png" %>
    <% end %>
  </div>
</div>

<div id='container' class='container'>
  <div id="scene" data-pointer-events='true'>
    <div id='stars-small' class='layer' data-depth="0.50" ></div>
    <div id='stars-medium' class='layer' data-depth="1.0"></div>
    <div id='stars-big' class='layer' data-depth="1.50"></div>
    <div class="main-column layer" data-depth="2">
      <div class='button'>team</div>
      <div class='button'>performance</div>
      <div class='button'>music</div>
    </div>
  </div>
</div>
