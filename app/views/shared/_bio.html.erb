<div class='main-content'>
  <div class='content-wrapper'>
    <div class="bio-item">
      <div class='top-row'>
        <div class='top-row-item-1'>
          <div class='row-1'>
            <% if bio_photo(person[:photo]) %>
              <div class='photo'>
                <%= bio_photo(person[:photo]) %>
              </div>
            <% end %>
            <div class='personal-details'>
              <h1 class='name'>
                <%= person[:name] %>
              </h1>
              <div class='title'>
                <%= person[:title] %>
              </div>
              <% person[:web_links].each do |web_link| %>
                <div class='web-link'>
                  <%= link_to web_link, "//#{web_link}", target: '_blank' %>
                </div>
              <% end %>
            </div>
          </div>
          <div class='bio'>
            <p class='bio-content'>
              <%= person[:bio].html_safe %>
            </p>
          </div>
        </div>
      </div>
    </div>
