<div class='main-content'>
  <div class='content-wrapper'>
    <div class="bio-item">
      <div class='top-row'>
        <div class='top-row-item-1'>
          <div class='row-1'>
            <div class='photo'>
            </div>
            <div class='personal-details'>
              <h1 class='name'>
                <%= person[:name] %>
              </h1>
              <div class='title'>
                <%= person[:title] %>
              </div>
              <div class='web-link'>
                <%= link_to person[:web_link], person[:web_link], target: '_blank' %>
              </div>
            </div>
          </div>
          <div class='bio'>
            <div class='bio-content'>
              <%= person[:bio] %>
            </div>
          </div>
        </div>
      </div>
    </div>
